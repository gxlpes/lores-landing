---
import { Picture } from "astro:assets";
import image1 from "../../assets/images/image1.jpg";
import image2 from "../../assets/images/image2.jpg";
import image3 from "../../assets/images/image3.jpg";
import image4 from "../../assets/images/image4.jpg";
---

<section class="max-h-[25rem] w-full object-cover mx-auto flex justify-center">
  <Picture src={image1} alt="image" class="object-cover scale-x-[-1] h-full rounded-r-md" width="600" />
  <Picture src={image3} alt="image" class="object-cover object-[center_65%] h-full" width="600" />
  <Picture src={image2} alt="image" class="object-cover scale-x-[-1] object-[center_25%] h-full" width="600" />
  <Picture src={image4} alt="image" class="object-cover h-full rounded-r-md" width="600" />
</section>
